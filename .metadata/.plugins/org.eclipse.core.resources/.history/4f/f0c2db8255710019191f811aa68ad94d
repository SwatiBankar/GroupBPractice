
public class FirstLetterReplaceString {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String s="i like testing shastra";
		//char[] ch =s.toCharArray();
		String[] s1=s.split("");
		String s2="";
		int i = 0;
		
		for(;i<s1.length;i++)
		{
			s2=s2+s1[i];
			
		}
		
		System.out.print(s1[i].toUpperCase());
			
	}
		
}



			
			
			
			
			
			
			
			
			
			
			
			
			
			
			
			
			
			
			
			
			
			
			
			
			
			