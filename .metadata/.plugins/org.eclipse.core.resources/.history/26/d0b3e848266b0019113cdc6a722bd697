
public class Demo2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int num=1;
		
		
		for(int i=1;i<=5;i++)
		{
			
			for(int j=1;j<=i;j++)
			{
				if(i%2==0)
				{
					System.out.print(num+" ");
						
				}
				else
				{
					char ch='B';
					System.out.print(ch+" ");
					
				}
				
				
				
			}
			System.out.println();
			num++;
			
			
			
		
		}
		
	}
	

}
