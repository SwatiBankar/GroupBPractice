
public class kProgram {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int n=5;
		for(int i=0;i<=n;i++)
		{
			for(int space=1;space<=n-i+1;space++)
		{
				System.out.print(" ");
			}
			int temp=i;
		for(int j=1;j<=i;j++)
		{
			System.out.print(temp+" ");
			temp--;
		}
		System.out.println();
		}

	}

}
